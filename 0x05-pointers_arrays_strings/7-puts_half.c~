#include "main.h"

/**
 * puts_half - prints half of the characters inputed.
 * @str: the inputed string
 *
 */

void puts_half(char *str)
{
	int i, j, u;

	for (i = 0; i < str[i]; i++)
	{
	}

        if (i % 2 == 0)
	{
		j = 0;

		while (j <= i / 2)
		{
			_putchar(str[j]);
			j++;
		}
	}
	else
	{
		u = 0;

		while (u <= (i - 1) /2)
		{
			_putchar(str[u]);
			u++;
		}
	}
}
